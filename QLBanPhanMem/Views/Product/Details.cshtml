                var productID = @Model.MAPM; // Lấy giá trị từ Model.MAPM

                // Tạo URL với tham số quantity và productID
                var url = "@Url.Action("AddToCart", "Cart")" + "?productID=" + productID + "&quantity=" + quantity;

